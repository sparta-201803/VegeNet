<div class="col-md-12">
 <div class="form-inline pull-right" style="margin-bottom:10px;">
   <%= search_form_for @q do |f| %>
     <div class="form-group">
       <%= f.search_field :name_cont, placeholder: "商品名で検索", class: "form-control" %>
       <%= f.submit "検索", class: "btn btn-primary" %>
     </div>
   <% end %>
 </div>
</div>

<% @products.each do |product| %>
    <div class="col-md-3 col-sm-6 red">
      <div class="form-group">
          <div class="col-md-12">
            <%= image_tag product.image_url %>
          </div>
          <div class="col-md-12">
            <%= link_to product.user.name,user_path(product.user) %>
          </div>
          <div class="col-md-12">
            <%= link_to product.name, product %>
          </div>
          <div class="col-md-12">
            ¥<%= product.price %>
          </div>
        </ul>
      </div>
    </div>

<% end %>
