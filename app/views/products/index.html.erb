
<div class="col-md-12">
 <div class="form-inline pull-right" style="margin-bottom:10px;">
   <%= search_form_for @q do |f| %>
     <div class="form-group">
       <%= f.search_field :name_cont, placeholder: "商品名で検索", class: "form-control" %>
       <%= f.submit "検索", class: "btn btn-primary" %>
     </div>
   <% end %>
 </div>
</div>


<% @products.each do |product| %>



    <div class="col-md-3 col-sm-6 red">
      <div class="form-group">
        <%= image_tag product.image_url %><br>
        <%= link_to product.user.name,user_path(product.user) %><br>
        <%= link_to product.name, product %>
      </div>
    </div>

<% end %>
